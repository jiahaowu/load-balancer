./cleanme

# Compile Java code
javac JniSample.java

# Create the header file: it generate header file.
#javah JniSample

# Based on this generated header file, we can make JniSample.c
# Then, make library using this.

unamestr=`uname`

if [[ "$unamestr" == 'Linux' ]]; then
	gcc -fPIC -shared -I$JAVA_HOME/include -I$JAVA_HOME/include/linux -I. -o ./libJniSample.so ./JniSample.c
elif [[ "$unamestr" == 'Darwin' ]]; then
   gcc -fPIC -shared -I$JAVA_HOME/include -I$JAVA_HOME/include/darwin -I. -o ./libJniSample.dylib ./JniSample.c
fi

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:.

